{% extends "::base.html.twig" %}
{% block stylesheets %}
    <script type="text/javascript" src="{{ asset("js/jquery-1.6.1.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/jquery.sparkline.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/jquery.tablesorter.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/jquery.ezpz_tooltip.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/flot/jquery.flot.js") }}"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="{{ asset('js/flot/excanvas.js') }}"></script><![endif]-->
    <link rel="stylesheet" href="{{ asset("css/blueprint/screen.css") }}" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="{{ asset("css/blueprint/print.css") }}" type="text/css" media="print"> 
    <link rel="stylesheet" href="{{ asset("css/blueprint/plugins/buttons/screen.css") }}" type="text/css" media="screen, projection"> 
    <!--[if lt IE 8]>
        <link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection">
    <![endif]-->
    <link rel="stylesheet" href="{{ asset("bundles/dtltrainer/css/main.css") }}" type="text/css" media="screen, projection">
{% endblock %}
{% block body %}
    <!-- Add tablesorter parser to parse date column with words !-->
    <script type="text/javascript">
        $(document).ready(function() {
            $.tablesorter.addParser({
                id: 'date_with_words',
                is: function (s) {
                    return false;
                },
                format: function (s) {
                    var s = $.trim(s).substr(0,10).replace(/-/g, '');
                    return s;
                },
                type: 'numeric',
            });
        });
    </script>
    <div class="container">
        <div class="span-12" id="header">
            <h1>Mongo Trainer</h1>
        </div>
        <div class="span-12 last" id="navigation-1">
            <a class="large" href="{{ path('sessions') }}">Sessions</a>
            <a class="large" href="{{ path('routes') }}">Routes</a>
        </div>
        <div class="span-12" id="title">
            <h2>{% block page_title %}{% endblock %}</h2>
        </div>
        <div class="span-12 last" id="navigation-2">
            {% block navigation2 %}
            {% endblock %}
        </div>
        <hr/>
        {% if app.session.getFlash('success') %}
            <div class="span-24 success">
                {{ app.session.getFlash('success') }}
            </div>
        {% endif %}
        {% block page %}
        <div class="span-18">
            {% block page_content %}
            {% endblock %}
        </div>
        <div class="span-6 last">
            {% block sidebar_right %}
            {% endblock %}
        </div>
        {% endblock %}
    </div>
{% endblock %}
